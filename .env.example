# Application
PROJECT_NAME=raf
API_V1_STR=/api/v1

# Security
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://admin:admin@localhost/raf
SQLALCHEMY_SYNC_DATABASE_URI=postgresql+psycopg2://admin:admin@localhost/raf
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAILS_FROM_EMAIL=your_email@example.com
EMAILS_FROM_NAME=Your App Name
USE_TLS=false
START_TLS=false
SMTP_TIMEOUT=10

# Server
SERVER_HOST=http://localhost:8000

# SMS / Twilio
TWILIO_ACCOUNT_SID=fake_sid
TWILIO_AUTH_TOKEN=fake_token
TWILIO_FROM_NUMBER=+1234567890
SMS_CODE_EXPIRE_MINUTES=15

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_REGION_NAME=us-east-1
AWS_S3_ENDPOINT_URL=

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
